<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_drawable"
    tools:context=".RoomChatActivity">

    <LinearLayout
        android:id="@+id/ngobrolKuyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngobrol"
            android:textSize="16pt"
            android:fontFamily="@font/redhatdisplay_regular"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/kuy"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Kuy"
            android:textSize="16pt"
            android:fontFamily="@font/redhatdisplay_regular"
            android:textStyle="bold"
            android:textColor="@color/pink"/>

        <ImageView
            android:layout_marginStart="140dp"
            android:id="@+id/dots"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/titik"></ImageView>

    </LinearLayout>



    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/RoomChat1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ngobrolKuyTitle">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/man"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">
        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:id="@+id/nama1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ozora"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:textSize="10pt"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:ignore="InvalidId" />
        <TextView
            android:id="@+id/chat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="p balap"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:layout_below="@id/nama1"
            android:textSize="7pt"
            android:textColor="@color/white"
            tools:ignore="InvalidId" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RoomChat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/RoomChat1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/racheltjhia"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">
        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:id="@+id/nama2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rachel Tjhia"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img2"
            android:textSize="10pt"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:ignore="InvalidId" />
        <TextView
            android:id="@+id/chat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iyaaaa"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img2"
            android:layout_below="@id/nama2"
            android:textSize="7pt"
            android:textColor="@color/white"
            tools:ignore="InvalidId" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RoomChat3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/RoomChat2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/zero"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">
        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:id="@+id/nama3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moona Hoshinova"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img3"
            android:textSize="10pt"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:ignore="InvalidId" />
        <TextView
            android:id="@+id/chat3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aku punya kostum baru lohh"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img3"
            android:layout_below="@id/nama3"
            android:textSize="7pt"
            android:textColor="@color/white"
            tools:ignore="InvalidId" />
    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>